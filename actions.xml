<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<!-- <ACTION NAME="customplugin.toggle-favorites"> -->
	<ACTION NAME="masterraise.toggle-favorites">
		<CODE>
			masterraise.MasterRaisePlugin.toggleFavorites(view);
		</CODE>
		<IS_SELECTED>
			return masterraise.MasterRaisePlugin.checkFavorites();
		</IS_SELECTED>
	</ACTION>
	<ACTION NAME="inspect-file">
		<CODE>
			masterraise.notify.File.startInspect(view);
		</CODE>
	</ACTION>
	<ACTION NAME="inspect-pixel">
		<CODE>
			masterraise.notify.Pixel.startInspect(view);
		</CODE>
	</ACTION>
	<ACTION NAME="inspect-alarm">
		<CODE>
			new masterraise.notify.Alarm().startInspect(view);
		</CODE>
	</ACTION>
	<ACTION NAME="open-its-folder">
		<CODE>
			String openPath = buffer.getPath();
			if(buffer.isNewFile()){
				openPath = buffer.getDirectory();
			}
			new masterraise.files.jEditFile().openFolder(openPath);
		</CODE>
	</ACTION>
</ACTIONS>