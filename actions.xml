<!DOCTYPE ACTIONS SYSTEM "actions.dtd">

<ACTIONS>
	<ACTION NAME="masterraise.toggle-favorites">
		<CODE>
			masterraise.MasterRaisePlugin.toggleFavorites(view);
		</CODE>
		<IS_SELECTED>
			return masterraise.MasterRaisePlugin.checkFavorites();
		</IS_SELECTED>
	</ACTION>
	<ACTION NAME="open-its-folder">
		<CODE>
			String openPath = buffer.getPath();
			if(buffer.isNewFile()){
				openPath = buffer.getDirectory();
			}
			new masterraise.files.jEditFile().openFolder(openPath);
		</CODE>
	</ACTION>
	
	<ACTION NAME="notify-file">
		<CODE>
			masterraise.notify.File.start(view);
		</CODE>
	</ACTION>
	<ACTION NAME="notify-pixel">
		<CODE>
			masterraise.notify.Pixel.start(view);
		</CODE>
	</ACTION>
	<ACTION NAME="notify-alarm">
		<CODE>
			new masterraise.notify.Alarm().start(view);
		</CODE>
	</ACTION>
	
	<ACTION NAME="spreadsheet-transpose-matrix">
		<CODE>
			new masterraise.tools.SpreadSheet().transposeMatrix();
		</CODE>
	</ACTION>
	
</ACTIONS>